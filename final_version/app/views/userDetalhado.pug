extends layout

block content
  nav.navbar.navbar-expand-lg.navbar-dark.w3-dark-grey
    a.navbar-brand(href='/home') Feed/Home
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
    .collapse.navbar-collapse(id='navbarSupportedContent')
        ul.navbar-nav.mr-auto
            li.nav-item.active
                a.nav-link(href='/repositorio') Repositório
            li.nav-item
                a.nav-link(href='/recursosprivados') Meus Recursos


        ul.navbar-nav.float-right
            li.nav-item
                a.nav-link(href='/users/detalhe/') Conta
            li.nav-item
                a.nav-link(href='/users/manage') Admin

  .w3-container.w3-boarder.w3-dark-grey.w3-margin-top
    .w3-container.w3-left
      h1 Actualizar Dados de #{user.name}

  .w3-container.w3-boarder.w3-grey.w3-margin-top
      .w3-container.w3-margin-left
        tr
            p Name: #{user.name}
            p Username:#{user.username}
            p Level: #{user.level}
            p Email: #{user.email}
            p Filiation: #{user.filiation}
            p Register Date: #{user.dateRegister}
            //p Last Access Date: #{lista.dateLastAcess}

  .w3-container.w3-ligh-grey
    h3 Alterar Informações
  
  .w3-container.w3-grey
    form.w3.container(action="/users/modificar/"+user._id method='PUT', enctype='multipart/form-data')
      p
      label.w3-bold Name
      input.w3-input.w3-border(type="text", name="name", value=`${user.name}`)
      p
      label.w3-bold Username
      input.w3-input.w3-border(type="text", name="username", value=`${user.username}`)
      p
      label.w3-bold Email
      input.w3-input.w3-border(type="text", name="email", value=`${user.email}`)
      p
      label.w3-bold Password
      input.w3-input.w3-border(type="text", name="password", value="")
      p
      label.w3-bold Filiation
        select.w3-input.w3-border(name="filiation", value=`${user.filiation}`)
          option(value="estudante") Estudante
          option(value="professor") Professor
      p
      button.btn.btn-primary(type='submit') Submit



  .w3-container.w3-gray.w3-center
    p
    a.w3-margin(href="/home") Voltar a homepage
    p