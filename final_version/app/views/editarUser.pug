extends layout

block content
  nav.navbar.navbar-expand-lg.navbar-dark.w3-dark-grey
    a.navbar-brand(href='/home') Feed/Home
    button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarSupportedContent', aria-controls='navbarSupportedContent', aria-expanded='false', aria-label='Toggle navigation')
        span.navbar-toggler-icon
    .collapse.navbar-collapse(id='navbarSupportedContent')
        ul.navbar-nav.mr-auto
            li.nav-item.active
                a.nav-link(href='/repositorio') Reposit√≥rio
            li.nav-item
                a.nav-link(href='/recursosprivados') Recursos Privados

        ul.navbar-nav.float-right
            li.nav-item
                a.nav-link(href='/users/detalhe/') Conta
            li.nav-item
                a.nav-link(href='/users/manage') Admin

  .w3-container.w3-margin.w3-border.w3-ligh-grey
    .w3-container.w3-ligh-grey
      h3 Alterar dados do User
      form.w3.container(action="/users/modificar/"+id_user method='PUT', enctype='multipart/form-data')
        p
        label.w3-bold Name
        input.w3-input.w3-border(type="text", name="name")
        p
        label.w3-bold Username
        input.w3-input.w3-border(type="text", name="username")
        p
        label.w3-bold Email
        input.w3-input.w3-border(type="text", name="email")
        p
        label.w3-bold Password
        input.w3-input.w3-border(type="text", name="password")
        p
        label.w3-bold Filiation
          select.w3-input.w3-border(name="filiation")
            option(value="estudante") Estudante
            option(value="professor") Professor
        p
        button.btn.btn-primary(type='submit') Submit


    .w3-container.w3-dark-grey.w3-center
      p
      a.w3-margin(href="/home") Voltar a homepage
      p